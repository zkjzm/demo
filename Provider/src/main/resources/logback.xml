<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">
  <jmxConfigurator/>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d[%level][%thread][%marker] - %msg (%F:%L\)%n</pattern>
    </encoder>
  </appender>
  <root level="info">
    <appender-ref ref="STDOUT"/>
  </root>
</configuration>